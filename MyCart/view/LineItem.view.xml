<mvc:View
	controllerName="sap.ui.demo.cart.view.LineItem"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		title=" {i18n>lineItemTitle}"
		showNavButton="true"
		navButtonPress="handleNavBack"
		class="sapUiFioriObjectPage"
		showFooter="{device>/isNoPhone}" >
		<footer>
			<Toolbar>
							<ToolbarSpacer/>
				<Button
					text="{i18n>approveButtonText}"
					type="Accept"
					enabled="{cfg>/actionsEnabled}"
					press="handleApprove" />


			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{ShoppingCartItemID}"
				number="{Amount}"
				numberUnit="{CurrencyCode}" >
				<attributes>
					<ObjectAttribute
						text="{ProductName}" />
				</attributes>
			</ObjectHeader>
			<form:SimpleForm
				id="form"
				minWidth="1024"
				title="Delivery On"
				maxContainerCols="2" >
					<Label text="Plant"/>
					<Text text="SAP SE"/>
					<Label text="Street"/>
					<Text text="Dietmar-Hopp-Allee"/>
					<Label text="City"/>
					<Text text="Walldorf"/>
					<Label text="Country"/>
					<Text text="Germany"/>
			</form:SimpleForm>

		</content>
	</Page>
</mvc:View>